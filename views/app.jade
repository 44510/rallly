        a.logo(href='/', target='_self')
            img(src='/images/logo_light.png', width='100')
        .menu-section Menu
        nav
            a(href='/', target='_self') 
                img(src='/images/home.png', width='12')
                span Homepage
            a(href='/#about', target='_self') 
                img(src='/images/about.png', width='12')
                span About / FAQ
        .seperator
        a.create-new(href='/new') 
            img(src='/images/add.png', width='12')
            span Schedule an Event
        
    .main-content
        .main-view(ui-view='')
